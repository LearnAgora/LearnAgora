{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
        <div class="ln-login center-block">
            <form role="form" action="{{ path('fos_user_security_check') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <img src="http://sharpskill.io/images/logo.9691e1f9.png" alt="SharpSkill">
                            <h3>Welcome to SharpSkill</h3>
                        </div>
                        <hr/>

                        <div class="form-group">
                            <label for="ln-login-username">User name</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Enter user name or email" required autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ln-login-password">Password</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer clearfix">
                        <div class="row">
                            <div class="col-sm-5">
                                <button class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit">Enter</button>
                            </div>
                            <div class="col-sm-2 text-center">
                                <p class="no-margin" style="padding:6px"><i>or</i></p>
                            </div>
                            <div class="col-sm-5">
                                <a class="btn btn-link btn-block" href="{{ path('fos_user_registration_register') }}">Create a new account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock fos_user_content %}
