{# src/Acme/SecurityBundle/Resources/views/Security/login.html.twig #}
{% extends "LaLearnodexBundle::main.html.twig" %}

{% block head %}
    <link href="{{ asset('bundles/lalearnodex/css/login.css', absolute=true) }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}


{% block container %}

<div class="row">
    <img class="img-responsive center-block" src="{{ asset('bundles/lalearnodex/images/logo.png', absolute=true) }}"/>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <form role="form" action="{{ path('login_check') }}" method="post">

            {% if error %}
                <div class="alert alert-warning">{{ error.message }}</div>
            {% endif %}

            <div class="form-group">
                <label for="username">Email address</label>
                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email address" required autofocus>
            </div>

            <div class="form-group">
                <label for="username">Password</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                </div>
                <div class="col-xs-6">
                    <a role="button" class="btn btn-success btn-block" href="{{ path('register') }}">Register now</a>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}
