<div class="col-xs-12">
    <h4><small>{{ card.getContent().instruction }}</small></h4>

    <a class="btn btn-default btn-block ln-url-modal-trigger" href="#" data-toggle="modal" data-target="#ln-url-display-modal">{{ card.getContent().url }}</a>

    <p class="lead"><br>{{ card.getContent().question }}</p>

    <form action="{{ path('make_trace') }}" method="post">
        {% for answer in card.getContent().getAnswers() %}
            <div class="checkbox">
                <label>
                    <input name="answer" value="{{ answer.id }}" type="checkbox">
                    {{ answer.answer }}
                </label>
            </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="modal fade" id="ln-url-display-modal" tabindex="-1" role="dialog" aria-labelledby="ln-url-display-modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">{{ card.getContent().url }}</h4>
            </div>
            <div class="modal-body">
                <iframe width="100%" height="100%" frameborder="0" scrolling="yes" allowtransparency="true" src="{{ card.getContent().url }}"></iframe>
            </div>
        </div>
    </div>
</div>
