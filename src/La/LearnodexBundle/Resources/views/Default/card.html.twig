{% extends "LaLearnodexBundle::layout.html.twig" %}

{% block main %}
    <h1 class="text-center">{{ learningEntity.name }}</h1>
    <hr>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            {% set content = learningEntity.getContent() %}
                <h6>{{ content.instruction }}</h6>
                <button type="button" class="btn btn-default btn-lg col-xs-12">
                    {{ content.question }}
                </button>
            {% for answer in content.getAnswers() %}
            <div class="col-xs-12 text-center">
                <button type="button" class="btn btn-primary">
                    {{ answer.answer }}
                </button><br />
            </div>
            {% endfor %}
        </div>
        <div class="col-xs-2"></div>
    </div>
{% endblock %}
