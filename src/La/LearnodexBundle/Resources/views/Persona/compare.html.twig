{% extends "LaLearnodexBundle::card.html.twig" %}

{% block card_body_placeholder_class 'col-xs-12' %}
{% block card_toolbar_placeholder_class 'hidden' %}

{% block card_header %}
    <h1>Comparison with {{ persona.getUser().getUserName() }}</h1>
{% endblock %}

{% block card_body %}
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <table border="1">
                <thead>
                    <td>Agora</td>
                    <td>you</td>
                    <td>{{ persona.getUser().getUserName() }}</td>
                </thead>
                {% for affinityRecord in affinityArray %}
                <tr>
                    <td>{{ affinityRecord['agora_name'] }}</td>
                    <td>{{ affinityRecord['user_affinity']|default("0")|number_format(0) }}%</td>
                    <td>{{ affinityRecord['persona_affinity']|number_format(0) }}%</td>
                </tr>
                {% endfor %}
            </table>
            <a href="{{ path('goal_create_persona', {id: persona.getId()}) }}" class="btn btn-default">Verify</a>
        </div>
    </div>
{% endblock %}

