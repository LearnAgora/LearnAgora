{% extends "LaLearnodexBundle::Admin/Admin.html.twig" %}

{% block card_content %}
    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="form-group">
        <label for="{{ form.content.vars.id }}">{{ form.content.vars.label }}</label>
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Enter HTML-formatted description'}}) }}
    </div>

    {{ form_widget(form.create, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_end(form) }}
{% endblock %}
