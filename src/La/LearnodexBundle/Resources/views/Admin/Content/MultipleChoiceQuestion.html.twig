{% extends "LaLearnodexBundle::Admin/Admin.html.twig" %}

{% block card_content %}
    {{ form_start(form) }}
    <div class="row">
    {{ form_errors(form) }}
    </div>
    <div class="row">
        <div class="col-xs-2 text-right">
            {{ form_label(form.instruction) }}
        </div>
        <div class="col-xs-10">
            {{ form_widget(form.instruction) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 text-right">
            {{ form_label(form.question) }}
        </div>
        <div class="col-xs-10">
            {{ form_widget(form.question) }}
        </div>
    </div>
    {% for answer in form.answers %}
        <div class="row">
            <div class="col-xs-2 text-right">
                <b>Answer {{ loop.index0+1 }}</b>
            </div>
            <div class="col-xs-7">
                {{ form_widget(answer.answer) }}
            </div>
            <div class="col-xs-2">
                <a class="btn btn-default" href="{{ path('remove_answer',{'id':card.getId(),'answerId':answer.vars.value.id}) }}">Remove this answer</a>
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-xs-2 text-right"></div>
        <div class="col-xs-10">
            {{ form_end(form) }}(save before adding answers)
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 text-right"></div>
        <div class="col-xs-10">
            <a class="btn btn-default" href="{{ path('add_answer',{'id':card.getId()}) }}">Add an answer</a>
        </div>
    </div>
{% endblock %}
