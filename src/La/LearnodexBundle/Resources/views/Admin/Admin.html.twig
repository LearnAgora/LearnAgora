{% extends "LaLearnodexBundle::card.html.twig" %}

{% block card_header_edit %}
    <a class="btn btn-link" href="{{ path('card_name', {'id': card.getId()}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
{% endblock %}

{% block card_body %}
    {% block card_content %}{% endblock %}
{% endblock %}

{% block card_toolbar %}
    <ul class="nav nav-pills" >
        <li ng-class="">
            <a href="{{ path('card_content', {'id':card.getId()}) }}">
                <img src="{{ asset('bundles/lalearnodex/images/description.png', absolute=true) }}" />
            </a>
        </li>
        <li ng-class="">
            <a href="{{ path('card_outcome', {'id':card.getId()}) }}">
                <img src="{{ asset('bundles/lalearnodex/images/outcomes.png', absolute=true) }}" />
            </a>
        </li>
        <li ng-class="">
            <a href="{{ path('card_link', {'id':card.getId()}) }}">
                <img src="{{ asset('bundles/lalearnodex/images/relations.png', absolute=true) }}" />
            </a>
        </li>
    </ul>
{% endblock %}
