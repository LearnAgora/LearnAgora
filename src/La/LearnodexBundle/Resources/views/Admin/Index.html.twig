{% extends "LaLearnodexBundle::layout.html.twig" %}

{% block Main %}
    <div class="jumbotron ln-valign-middle">
    <h1>Welcome!</h1>
    <p class="lead">Create your cards by choosing among the available types below.</p>
        <div class="row">
            {% set cardCollections = {'Agora' : agoras, 'Objective' : objectives, 'Action' : actions} %}

            {% for cardType, cardCollection in cardCollections %}
                <div class="col-xs-4 text-center">
                    <a class="ln-gray-highlight" href="{{ path('new_card', {'type': cardType}) }}">
                        <img src="{{ asset('bundles/lalearnodex/images/' ~ cardType|lower ~ '.png', absolute=true) }}" />
                    </a>
                    <p class="lead"><strong>{{ cardType }}</strong></p>
                    <table class="table table-hover table-condensed">
                        <tbody>
                        {% for learningEntity in cardCollection %}
                            <tr><td><a href="{{ path('card_content', {'id':learningEntity.id}) }}">{{ learningEntity.name }}</a></td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
