{% extends "LaLearnodexBundle::layout.html.twig" %}

{% block Main %}
    <div class="jumbotron">
        <h1><small>Create new card</small></h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></div>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control input-lg'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.create, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}</div>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
