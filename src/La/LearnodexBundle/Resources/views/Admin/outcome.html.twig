{% extends "LaLearnodexBundle::layout.html.twig" %}

{% block html_tag 'ng-app="card"' %}
{% block body_tags 'role="document"  ng-controller="CardController as card"' %}
{% block main %}
    <div class="col-xs-10">
        <h1>{{ learningEntity.name }}</h1>

        <h3>Current outcomes:</h3>
        {% if outcomes is empty %}
            No outcomes yet
        {% endif %}
        {% for outcome in outcomes %}
            <div class="row">
                <div class="col-xs-10">
                {{ include('LaLearnodexBundle:Admin:outcomeForm.html.twig',{
                'id': learningEntity.id,
                'form':outcome.getForm(),
                } ) }}
                </div>
                <div class="col-xs-2">
                    <a href="{{ path('remove_outcome',{'outcomeId':outcome.id}) }}">
                        Delete
                    </a>
                </div>
            </div>
        {% endfor %}

        <h3>Add another outcome:</h3>
        {% if possibleOutcomes is empty %}
            No new outcomes possible
        {% endif %}
        {% for outcome in possibleOutcomes %}
            {{ include('LaLearnodexBundle:Admin:outcomeForm.html.twig',{
                'id': learningEntity.id,
                'form':outcome.getForm(),
            } ) }}
        {% endfor %}
    </div>
    <div class="col-xs-2">
        {{ include('LaLearnodexBundle:Admin:menu.html.twig',{
            'id': learningEntity.id,
            'action':'outcome',
        } ) }}
    </div>
{% endblock %}
