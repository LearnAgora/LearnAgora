{% extends "LaLearnodexBundle::layout.html.twig" %}

{% block html_tag 'ng-app="card"' %}
{% block body_tags 'role="document"  ng-controller="CardController as card"' %}
{% block main %}
    <div class="col-xs-10">
        <div class="row">
            {% block card %}{% endblock %}
        </div>
    </div>
    <div class="col-xs-2">
        <ul class="nav nav-pills" >
            <li ng-class="">
                <a href="{{ path('card_content', {'id':learningEntity.id}) }}">
                    <img src="{{ asset('bundles/lalearnodex/images/description.png', absolute=true) }}" />
                </a>
            </li>
            <li ng-class="">
                <a href="{{ path('card_outcome', {'id':learningEntity.id}) }}">
                    <img src="{{ asset('bundles/lalearnodex/images/outcomes.png', absolute=true) }}" />
                </a>
            </li>
            <li ng-class="">
                <a href="{{ path('card_link', {'id':learningEntity.id}) }}">
                    <img src="{{ asset('bundles/lalearnodex/images/relations.png', absolute=true) }}" />
                </a>
            </li>
        </ul>
    </div>
{% endblock %}

