<div class="row">
    {% set referenceOutcome = cardOutcome.getReferenceOutcome() %}
    <div class="col-xs-12 col-sm-4 text-right">
        <p>{{ referenceOutcome.caption }}</p>
    </div>

    {% set numberOfStars = cardOutcome.getNumberOfStars() %}
    <div class="col-xs-12 col-sm-8 rating">
        <form>
            <input id="outcome-{{ referenceOutcome.caption }}" class="rating" type="number" data-step="1" value="{{ numberOfStars }}" data-size="xs" data-show-caption="false" data-readonly="true">
            <span class="label label-default">fixed</span>
        </form>
    </div>
</div>
